        <hr />
        <hr />
        <div class="currencies float-left">
            <h2>
                Добавление значения
            </h2>

        </div>
        <hr />
        <hr />

        <form asp-action="AddRisks" method="post" class="form">
            <hr />
            <hr />
            <div class="form-group">
                <label asp-for="Description"></label>
                <div class="col-md-12">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="OTV"></label>
                <div class="col-md-12">
                    <input asp-for="OTV" class="form-control" />
                    <span asp-validation-for="OTV" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="RedLine"></label>
                <div class="col-md-12">
                    <input asp-for="RedLine" class="form-control" />
                    <span asp-validation-for="RedLine" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Solution"></label>
                <div class="col-md-12">
                    <input asp-for="Solution" class="form-control" />
                    <span asp-validation-for="Solution" class="text-danger"></span>
                </div>
            </div>


            <input class="btn btn-success" type="submit" value="Добавить в таблицу" />
        </form>
    </div>