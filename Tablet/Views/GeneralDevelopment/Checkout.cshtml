@model GeneralDevelopment

    <div class="row  mt-5 mb-5">
        <hr />
        <hr />
        <div class="currencies float-left">
            <h2>
                Добавление значения
            </h2>

        </div>
        <hr />
        <hr />
        
        <form asp-action="Checkout" method="post" class="form">
            <hr />
            <hr />
            <div class="form-group">
                <label asp-for="Date"></label>
                <div class="col-md-12">
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Forecast"></label>
                <div class="col-md-12">
                    <input asp-for="Forecast" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Progress"></label>
                <div class="col-md-12">
                    <input asp-for="Progress" class="form-control" />
                </div>
            </div>
            <input class="btn btn-success" type="submit" value="Добавить в таблицу" />
        </form>
    </div>
