                            <td class="col1"></td>
                        }
                        else
                        {
                            <td class="col2"></td>
                        }
                        
                        <td>
                            @using (Html.BeginForm("EditFinance", "Restrictions"))
                            {
                                <input type="text" id="ss" name="value" value="@item.Finance" />
